generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  name      String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  workflows Workflow[]
}

model Workflow {
  id          String      @id @default(uuid())
  name        String
  description String?
  version     String
  definition  Json
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  viewport    Json
  userId      String?
  user        User?       @relation(fields: [userId], references: [id])
  executions  Execution[]

  @@index([userId])
}
enum ExecutionStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}
model Execution {
  id            String     @id @default(uuid())
  workflowId    String
  status        ExecutionStatus
  startedAt     DateTime   @default(now())
  completedAt   DateTime?
  result        Json?
  error         Json?

  workflow Workflow @relation(fields: [workflowId], references: [id])

  @@index([workflowId])
}

model Image {
  id          String   @id @default(uuid())
  filename    String
  mimetype    String
  size        Int
  path        String
  url         String
  purpose     String?
  createdAt   DateTime @default(now())
}
